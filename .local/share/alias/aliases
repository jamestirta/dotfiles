# stable diffusion
alias csd="cd ~/.local/src/stable-diffusion-webui" \
	vr="$BROWSER 'http://127.0.0.1:7860/'" \
	mkart="python ~/local/stable-diffusion-webui/webui.py --autolaunch --deepdanbooru" \
	kp="killall picom" \
	pp="kp ; killall dwmblocks ; sleep 0.1 && picom -b ; dwmblocks &" \
	sei="cd ~/.local/src/stable-diffusion-webui/outputs && lf" \
	pix="$BROWSER https://www.pixiv.net/upload.php" \
	it="sudo intel_gpu_top"

# cpu frequency
alias \
	oc="cpuoc '4'" \
	mid="cpuoc '3.6'" \
	dow="cpuoc '2.8'"

# alias vl="nvim ~/latex/compsys.tex"
alias \
	sf="nvim /etc/fan2go/fan2go.yaml" \
	nv="nvtop" \
	esrgan="realesrgan-ncnn-vulkan -f png -x -v -n realesrgan-x4plus-anime -s 4 -i" \
	sti="rm -f ~/.config/steal/library.csv && prime-run steal"
