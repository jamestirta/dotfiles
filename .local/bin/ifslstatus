#!/usr/bin/bash
slstat=$( pidof dwmblocks )
while true
do
  [[ -n "$( pgrep "onscripter-ru" )" && "$( pgrep "mpv" )" ]] && [[ "$( xdotool getwindowfocus getwindowname )" =~ "Umineko" ]] || [[ "$( xdotool getwindowfocus getwindowname )" =~ "mpv" ]] && kill -STOP "$slstat" && exit 0 || kill -CONT "$slstat"
  sleep 1
done
