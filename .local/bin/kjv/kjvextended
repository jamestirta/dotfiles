#!/usr/bin/dash
[ -z "$*" ] && [ -s /tmp/.kjv-verse ] && kjv "$( cat /tmp/.kjv )" | less -i -p "$( cat /tmp/.kjv-verse )" && exit ||{
[ -z "$*" ] && kjv "$( cat /tmp/.kjv )" && exit;}||{
echo "$1" > /tmp/.kjv && [ -n "$2" ] ;} &&{
  echo "$2" > /tmp/.kjv-verse && kjv "$1" | less -i -p "$2" && exit;}||{
  kjv "$1";}
