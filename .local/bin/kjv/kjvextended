if [ -z "$*" ]; then
  [ -z "$( cat /tmp/.kjv-verse )" ] && kjv "$( cat /tmp/.kjv )" | less -i -p "$( cat /tmp/.kjv-verse )" || kjv "$( cat /tmp/.kjv )"
else
  echo "$1" > /tmp/.kjv
  if [ -z "$3" ]; then
     
  else
    echo "$1 $2" > /tmp/.kjv ; echo "$3" > /tmp/.kjv-verse ; kjv "$( cat /tmp/.kjv )" | less -i -p "$( cat /tmp/.kjv-verse )"
  fi
fi
